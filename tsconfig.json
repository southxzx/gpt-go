{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es6", "DOM"],
    "strict": true,
    "jsx": "react",
    "typeRoots": ["./node_modules/@types", "./node_modules/@figma"],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noEmit": false
  },
  "include": ["./typings-custom/**/*.ts", "src/**/*", "src/code.ts"],
  "exclude": ["node_modules", "dist"]
}
